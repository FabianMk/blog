server {
    listen 80 default_server;
    server_name _;
    return 404;
}

server {
    listen ${PORT};
    server_name oli.me.uk;

    location / {
        root /usr/share/nginx/html;
    }

    error_page 404 /404.html;
    location = /404.html {
        root /usr/share/nginx/html;
        internal;
    }
}
